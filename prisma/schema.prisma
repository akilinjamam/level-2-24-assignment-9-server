generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vendor {
  vendorId      String     @id @default(uuid()) @db.Uuid
  vendorName    String
  shopName      String
  details       String
  logo          String
  userId        String     @default("1234")
  followedCount Int        @default(0)
  product       Products[]
  follows       Follow[]

  @@map("vendors")
}

model Products {
  productId   String   @id @default(uuid()) @db.Uuid
  productName String
  category    String
  quantity    Int      @default(0)
  discount    Int      @default(0)
  stock       Boolean  @default(true)
  price       Int
  flashSale   Boolean  @default(false)
  details     String
  suspend     Boolean  @default(false)
  clicked     Int
  images      String[]
  vendorId    String   @db.Uuid
  vendor      Vendor   @relation(fields: [vendorId], references: [vendorId])
  Rating      Rating[]
  Review      Review[]
  createdAt   DateTime @default(now()) @db.Timestamp(6)
  updatedAt   DateTime @updatedAt @db.Timestamp(6)

  @@map("products")
}

model User {
  userId           String             @id @default(uuid()) @db.Uuid
  userName         String
  email            String             @unique
  phoneNumber      String
  address          String
  password         String             @default("1234")
  suspend          Boolean            @default(false)
  blacklist        Boolean            @default(false)
  userType         UserType
  follows          Follow[]
  purchasedProduct PurchasedProduct[]

  @@map("users")
}

model Follow {
  followId String @id @default(uuid()) @db.Uuid
  vendorId String @db.Uuid
  userId   String @db.Uuid
  vendor   Vendor @relation(fields: [vendorId], references: [vendorId])
  user     User   @relation(fields: [userId], references: [userId])

  @@unique([vendorId, userId])
  @@map("follows")
}

model Rating {
  ratingId           String           @id @default(uuid()) @db.Uuid
  rating             Int
  productId          String           @db.Uuid
  purchasedProductId String           @db.Uuid
  userId             String
  product            Products         @relation(fields: [productId], references: [productId])
  purchasedProduct   PurchasedProduct @relation(fields: [purchasedProductId], references: [purchasedProductId])

  @@unique([productId])
  @@map("ratings")
}

model Review {
  reviewId           String           @id @default(uuid()) @db.Uuid
  review             String
  userId             String
  productId          String           @db.Uuid
  purchasedProductId String           @db.Uuid
  product            Products         @relation(fields: [productId], references: [productId])
  purchasedProduct   PurchasedProduct @relation(fields: [purchasedProductId], references: [purchasedProductId])
  Replay             Replay[]

  @@map("reviews")
}

model Replay {
  replayId String @id @default(uuid()) @db.Uuid
  userId   String
  replay   String
  reviewId String @db.Uuid
  review   Review @relation(fields: [reviewId], references: [reviewId])

  @@map("replays")
}

model PurchasedProduct {
  purchasedProductId String   @id @default(uuid()) @db.Uuid
  productName        String
  details            String
  quantity           Int
  category           String
  price              Int
  totalPrice         Int
  discount           Int
  suspend            Boolean  @default(false)
  purchased          Boolean  @default(false)
  userId             String   @db.Uuid
  productId          String
  vendorId           String   @default("123")
  user               User     @relation(fields: [userId], references: [userId])
  Rating             Rating[]
  Review             Review[]

  @@map("purchaseProducts")
}

enum UserType {
  USER
  VENDOR
  ADMIN
}
